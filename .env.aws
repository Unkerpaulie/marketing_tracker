# Django Marketing Tracker - Environment Variables Example
# Copy this file to .env and fill in your values for local development
# DO NOT commit .env to version control - it contains secrets!

ENVIRONMENT=AWS

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=54.197.12.217


# Django EC2 + RDS + S3 Deployment Configuration
# Copy this file, rename it, and fill in your values

# ============================================
# PROJECT INFORMATION
# ============================================
PROJECT_NAME="myproject"                    # Your Django project name
GITHUB_URL="https://github.com/username/repo.git"  # Your repo URL (or leave empty)
EC2_IP="54.123.45.67"                       # Your EC2 instance public IP

# ============================================
# RDS DATABASE CONFIGURATION
# ============================================
RDS_ENDPOINT="mydb.xxxxxx.us-east-1.rds.amazonaws.com"  # RDS endpoint
RDS_DBNAME="postgres"                        # Database name (default: postgres)
RDS_USER="dbuser"                            # Database username
RDS_PASSWORD="YourSecurePassword123!"         # Database password
RDS_PORT="5432"                               # Database port (default: 5432)
DATABASE_URL=postgresql://dbadmin:YourSecurePassword@your-rds-endpoint:5432/postgres

# ============================================
# AWS S3 CONFIGURATION
# ============================================
AWS_ACCESS_KEY_ID="AKIAXXXXXXXXXXXXXXXX"      # IAM user access key
AWS_SECRET_ACCESS_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # IAM user secret key
AWS_STORAGE_BUCKET_NAME="your-project-media"  # S3 bucket name
AWS_S3_REGION_NAME="us-east-1"                # AWS region (e.g., us-east-1)

# ============================================
# SSL CERTIFICATE (Optional)
# ============================================
# Path to SSL certificate if using RDS with SSL
# Leave empty if not using SSL
SSL_CERT_PATH=""  # e.g., "/certs/global-bundle.pem"

