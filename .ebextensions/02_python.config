# .ebextensions/02_python.config
# Python and environment configuration for AWS Elastic Beanstalk
# Note: Sensitive values (SECRET_KEY, AWS credentials) should be set via:
# - AWS Elastic Beanstalk Console (Environment → Configuration → Software)
# - AWS Systems Manager Parameter Store
# - AWS Secrets Manager
# DO NOT commit sensitive values to this file!

option_settings:
  aws:elasticbeanstalk:application:environment:
    # Django settings - IMPORTANT: Set these in EB Console or Parameter Store, not here!
    # DJANGO_SECRET_KEY: "your-secret-key-here-change-in-production"
    # DJANGO_DEBUG: "False"
    # DJANGO_ALLOWED_HOSTS: ".elasticbeanstalk.com, yourdomain.com"

    # AWS S3 Configuration - Set in EB Console or Parameter Store
    # AWS_STORAGE_BUCKET_NAME: "your-bucket-name"
    # AWS_S3_REGION_NAME: "us-east-1"
    # AWS_ACCESS_KEY_ID: "your-access-key"
    # AWS_SECRET_ACCESS_KEY: "your-secret-key"

    # Database Configuration - Set in EB Console or Parameter Store
    # DATABASE_URL: "postgresql://user:password@host:5432/dbname"

    # Python version
    PYTHON_VERSION: "3.12"

  aws:elasticbeanstalk:container:python:
    GzipCompression: true

  aws:autoscaling:launchconfiguration:
    IamInstanceProfile: "aws-elasticbeanstalk-ec2-role"